*
	outline: none;

body
	font-family: 'Segoe UI',Tahoma,Helvetica,sans-serif;
	font-weight: normal;
	font-size: 12px;


.graph
	position: fixed;
	//top: 75px;
	top: 0px;
	bottom: 100px;
	left: 0;
	right: 0;
	margin: 0;
	padding: 10px;
	overflow: auto;
	z-index: 1;
	border-bottom: 1px solid #aaa;
	box-shadow: inset 0 -2px 2px rgba(0,0,0,0.15);
	
	.bar 
		rect
			fill: steelblue
			shape-rendering: crispEdges

	.bar 
		text
			fill: white

	.axis path, .axis line
		fill: none
		stroke: #000
		shape-rendering: crispEdges


footer
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
	height: 100px
	margin: 0;
	padding: 0;
	overflow: auto;
	background-color: #222;
	color: white
	> div
		display: inline-block
		width: 200px
		text-align: center
		label
			display: block
		.value
			display: block